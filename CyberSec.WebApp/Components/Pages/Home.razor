@page "/"
@using Microsoft.AspNetCore.Components.Authorization

<PageTitle>Home</PageTitle>

<AuthorizeView>
    <Authorized Context="authContext">
        <h1>Hello, @authContext.User.Identity?.Name!</h1>
        <p>Witaj w systemie zarządzania wiadomościami.</p>
        <ul>
            <li><a href="/messages">📩 Przejdź do wiadomości</a></li>
            <li><a href="/permissions">🔐 Zarządzaj uprawnieniami</a></li>
        </ul>
    </Authorized>
    <NotAuthorized>
        <h1>Hello, Guest!</h1>
        <p>Zaloguj się, aby uzyskać dostęp do funkcji systemu.</p>
        <ul>
            <li><a href="/login">🔑 Zaloguj się</a></li>
            <li><a href="/register">📝 Zarejestruj się</a></li>
        </ul>
    </NotAuthorized>
</AuthorizeView>